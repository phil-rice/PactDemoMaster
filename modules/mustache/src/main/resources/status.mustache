<html>
<head><title>{{title}}</title></head>
<body>
{{{.}}}
{{#dependantServices}}
    <h1>Status Of Dependent Microservices</h1>

    <table>
        <tr>
            <th>Host</th>
            <th>Url</th>
            <th>Result</th>
        </tr>
        {{#status}}
            <tr>
                <td>{{host}}</td>
                <td>{{url}}</td>
                <td>{{statusCode}}{{exception}}{{exceptionMsg}}</td>
            </tr>
        {{/status}}
        {{^status}}
            <tr>
                <td colspan="3">No Dependant Microservices</td>
            </tr>
        {{/status}}
    </table>
{{/dependantServices}}
<h1>Status Of Caches</h1>
<table>
    <tr>
        <th>Name</th>
        <th>Size</th>
        <th>Queries</th>
        <th>PassedThrough</th>
        <th>Created</th>
        <th>Removed</th>
        <th>Cleared</th>
    </tr>

    {{#caches}}
        <tr>
            <td>{{name}}</td>
            <td>{{size}}</td>
            <td>{{queries}}</td>
            <td>{{passedThrough}}</td>
            <td>{{created}}</td>
            <td>{{removed}}</td>
            <td>{{cleared}}</td>
        </tr>
    {{/caches}}
    {{^caches}}
        <tr>
            <td colspan="3"> No caches</td>
        </tr>
    {{/caches}}
</table>
<form method="post" action="/internal/cache/clear">
    <button type="submit">Clear Caches</button>
</form>
</body>
</html>